---
import menu from '@tools/menu.js';
---

<footer>
  <div class="container">
    <div class="content flex">
      <div>
        <h4>Suivez-nous sur les réseaux sociaux&nbsp;:</h4>
        <a href="https://www.facebook.com/KTVTOKO" class="clean" target="_blank" rel="noreferrer noopener nofollow"><img src="/assets/facebook.svg" alt="facebook" title="facebook"></a>
        <h4 class="mt1">Nous recevoir&nbsp;:</h4>
        <ul>
          <li>TNT HD : <strong>6</strong></li>
          <li>ORANGE : <strong>6</strong></li>
        </ul>
      </div>
      <div>
        <ul>
          {menu.map(({href, title}) => (<li><a href={href}>{title}</a></li>))}
        </ul>
      </div>
      <div>
        <ul>
          <li><a href="/a-propos/">À propos</a></li>
          <li><a href="/contact/">Contact</a></li>
          <li><a href="/pub-partenaires/">Pub et partenaires</a></li>
          <li><a href="/aidez-nous/">Aider KTV Guyane</a></li>
          <li><a href="/mentions-legales/">Mentions légales</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container foot"><a href="/">KTV Guyane</a> © 2022</div>
</footer>

<style>
  footer {
    margin-top: 5em;
    padding: 1em 0 2em;
  }
  h4 {
    font-weight: 600;
  }
  img {
    width: 1.5em;
  }
  ul {
    line-height: 1.8;
  }
  .content {
    flex-direction: column;
    justify-content: space-between;
  }
  .foot {
    margin-top: 1.5em;
  }
  @media (min-width: 768px) {
    .content {
      flex-direction: row;
    }
  }
</style>