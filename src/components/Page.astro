---
import FilInfoContainer from '@components/FilInfoContainer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<FilInfoContainer>
  <div class="page-container">
    <h1>{title}</h1>
    <slot />
  </div>
</FilInfoContainer>

<style>
  .page-container {
    max-width: 50rem;
  }
  h1 {
    margin: 0 0 1em;
  }
  section :global(p) {
    margin: 1.125rem 0;
  }
</style>
