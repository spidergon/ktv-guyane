---
export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section>
  <div class="container">
    {title && (<h1>{title}</h1>)}
    <slot />
  </div>
</section>

<style>
  .container {
		--container-padding: 0;
	}
  h1 {
    margin: 0 0.5em 0.5em;
  }
  @media (min-width: 768px) {
		.container {
			--container-padding: 1em;
		}
    h1 {
      margin: 0 0 0.5em;
    }
  }
</style>