---
export interface Props {
  id: string;
  title: string;
  channel: string;
  thumbnail_120_url: string;
}

const { id, title, channel, thumbnail_120_url } = Astro.props;
---

<a class="flex item" href={`/videos/${id}`}>
  <div class="img-content">
    <img src={thumbnail_120_url} alt="">
  </div>
  {title}<br/>
  {channel}
</a>

<style>
  .item {
		padding: 0.5em 0;
	}
	.img-content {
		width: 120px;
    height: 70px;
	}
  img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
  a:hover,
  a:focus {
    background: rgba(0,0,0,0.2);
  }
</style>