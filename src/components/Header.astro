---
import menu from '@tools/menu.js';
import SocialIcon from '@components/SocialIcon.astro';

const pathname = Astro.canonicalURL.pathname;
---

<header>
  <div class="topbar container flex">
    <a href="/" class="brand clean">
      <img src="/assets/KTV.webp" alt="KTV Guyane">
    </a>
    <div class="icons flex">
      <SocialIcon brand="Facebook" href="https://www.facebook.com/KTVTOKO" />
      <SocialIcon brand="Twitter" href="https://twitter.com" />
      <button class="menu-btn">
        <span class="sr-only">Ouvrir / fermer menu</span>
      </button>
    </div>
  </div>
  <div class="navbar">
    <nav class="container">
      <ul class="flex">
        {menu.map(({href, title}) => (<li><a class={href !== '/' && href === pathname ? 'active' : ''} href={href}>{title}</a></li>))}
      </ul>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.querySelector('.menu-btn');
  const nav = document.querySelector('nav');
  menuBtn.addEventListener('click', () => {
    nav.classList.toggle('active');
    menuBtn.classList.toggle('active');
  });
</script>

<style>
  .topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    margin-top: 1em;
  }
  .brand {
    font-size: 1.5em;
    font-weight: 700;
    text-transform: uppercase;
    width: 150px;
  }
  .icons {
    align-items: center;
  }
  .navbar {
    margin-top: 1.5em;
    min-height: 1em;
  }
  button {
    background: url(/assets/menu.png) no-repeat;
    background-size: 32px;
    background-position: center;
    width: 40px;
    height: 40px;
    border: 0;
    padding: 0.5em;
    cursor: pointer;
    transition: 0.3s ease;
  }
  button.active {
    background: url(/assets/close.png) no-repeat;
    background-size: 24px;
    background-position: center;
    transition: 0.3s ease;
  }
  nav {
    display: none;
    width: 100%;
    text-transform: uppercase;
  }
  nav.active {
    display: block;
  }
  nav ul {
    flex-direction: column;
  }
  nav li {
    padding: 0.7em;
    text-align: center;
  }
  nav a:before {
    background: green;
    height: 3px;
  }
  @media (min-width: 768px) {
    .topbar button {
      display: none;
    }
    nav {
      display: block;
    }
    nav ul {
      flex-direction: row;
    }
  }
</style>
