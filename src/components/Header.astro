---
import menu from '@tools/menu.js';
---

<header>
  <div class="topbar container flex">
    <a href="/" class="brand">
      <img src="/assets/KTV.webp" alt="KTV Guyane">
    </a>
    <div class="icons flex">
      <a href="https://www.facebook.com/KTVTOKO" target="_blank" rel="noreferrer noopener nofollow"><img src="/assets/facebook.svg" alt="facebook" title="Suivez-nous sur facebook" style="width:1.5em;"></a>
      <button class="menu-btn">
        <span class="sr-only">Ouvrir / fermer menu</span>
      </button>
    </div>
  </div>
  <div class="navbar">
    <nav class="container">
      <ul class="flex">
        {menu.map(({href, title}) => (<li><a href={href}>{title}</a></li>))}
      </ul>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.querySelector('.menu-btn');
  const nav = document.querySelector('nav');
  menuBtn.addEventListener('click', () => {
    nav.classList.toggle('active');
    menuBtn.classList.toggle('active');
  });
</script>

<style>
  header {
    padding: 0.5em 0;
  }
  .topbar {
    height: 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .brand {
    font-size: 1.5em;
    font-weight: 700;
    text-transform: uppercase;
    width: 150px;
  }
  .icons {
    --gap: 1.5em;
    align-items: center;
  }
  .navbar {
    margin-top: 1.5em;
    min-height: 1em;
  }
  button {
    background: url(/assets/menu.png) no-repeat;
    background-size: 32px;
    background-position: center;
    width: 40px;
    height: 40px;
    border: 0;
    padding: 0.5em;
    cursor: pointer;
    transition: 0.3s ease;
  }
  button.active {
    background: url(/assets/close.png) no-repeat;
    background-size: 24px;
    background-position: center;
    transition: 0.3s ease;
  }
  nav {
    display: none;
    width: 100%;
  }
  nav.active {
    display: block;
  }
  nav ul {
    flex-direction: column;
  }
  nav li {
    padding: 0.7em;
  }
  nav a {
    position: relative;
    font-size: 1em;
    font-weight: 500;
    padding-bottom: 0.2em;
    transition: 0.5s ease;
  }
  nav a:before {
    content: '';
    position: absolute;
    background: green;
    width: 0;
    height: 3px;
    bottom: 0;
    left: 0;
    transition: 0.5s ease;
  }
  nav a:hover:before,
  nav a:focus:before {
    width: 100%
  }
  @media (min-width: 768px) {
    .topbar button {
      display: none;
    }
    nav {
      display: block;
    }
    nav ul {
      flex-direction: row;
    }
  }
</style>
